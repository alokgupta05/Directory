<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Sr. No-->
    <TextView
        android:id="@+id/lblSrNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:textStyle="bold"
        android:textColor="@color/blue_custom"/>

    <!-- Time Stamp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Full Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Date of Birth -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Village -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblVillage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtVillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Gender -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Mobile No -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton android:id="@+id/btnCall"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_call_black"
                android:background="@null"
                android:layout_alignParentEnd="true"/>

            <ImageButton android:id="@+id/btnSms"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_sms_black"
                android:background="@null"
                android:layout_toStartOf="@+id/btnCall"/>

            <TextView
                android:id="@+id/txtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_toStartOf="@+id/btnSms"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </LinearLayout>

    <!-- WhatsApp No -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblWhatsAppNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton android:id="@+id/btnWhatsApp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_whatsapp_black"
                android:background="@null"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/txtWhatsAppNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_toStartOf="@+id/btnWhatsApp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <!-- Work Gist -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblWorkGist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtWorkGist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Department -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Complaint -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@android:color/black"
            android:gravity="start"/>

    </LinearLayout>

    <!-- Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="@color/blue_custom"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:gravity="end"/>

    </LinearLayout>

    <ImageButton android:id="@+id/btnShare"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/ic_share_black"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/label_name"
        android:background="@android:color/darker_gray"/>

</LinearLayout>