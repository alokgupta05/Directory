<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->


    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <stroke

                android:width="0.5dp"
                android:color="#bac3c9" />

            <corners android:radius="5dp" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2.5dp"
                android:color="#33bac3c9" />

            <corners android:radius="5dp" />
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2.5dp"
                android:color="#28bac3c9" />
            <padding
                android:bottom="1dp"
                android:left="15dp"
                android:right="15dp"
                android:top="1dp" />

            <size android:height="50dp" />
            <corners android:radius="5dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>

